<resources>

  <style name="Theme.Karrency" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="toolbarStyle">@style/Theme.Karrency.Toolbar</item>

    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/accent_color</item>
  </style>

  <style name="ActionBar.Transparent.Karrency" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:background">@drawable/ab_transparent_karrency</item>
    <item name="android:progressBarStyle">@style/ProgressBar.Karrency</item>
  </style>

  <style name="PopupMenu.Karrency" parent="@android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_karrency</item>
  </style>

  <style name="DropDownListView.Karrency" parent="@android:style/Widget.Holo.ListView.DropDown">
    <item name="android:listSelector">@drawable/selectable_background_karrency</item>
  </style>

  <style name="ActionBarTabStyle.Karrency" parent="@android:style/Widget.Holo.ActionBar.TabView">
    <item name="android:background">@drawable/tab_indicator_ab_karrency</item>
    <item name="android:padding">0dp</item>
  </style>

  <style name="DropDownNav.Karrency" parent="@android:style/Widget.Holo.Spinner">
    <item name="android:background">@drawable/spinner_background_ab_karrency</item>
    <item name="android:popupBackground">@drawable/menu_dropdown_panel_karrency</item>
    <item name="android:dropDownSelector">@drawable/selectable_background_karrency</item>
  </style>

  <style name="ProgressBar.Karrency" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/progress_horizontal_karrency</item>
  </style>

  <style name="ActionButton.CloseMode.Karrency"
      parent="@android:style/Widget.Holo.ActionButton.CloseMode">
    <item name="android:background">@drawable/btn_cab_done_karrency</item>
  </style>

  <!-- this style is only referenced in a Light.DarkActionBar based theme -->
  <style name="Theme.Karrency.Widget" parent="@android:style/Theme.Holo">
    <item name="android:popupMenuStyle">@style/PopupMenu.Karrency</item>
    <item name="android:dropDownListViewStyle">@style/DropDownListView.Karrency</item>
  </style>

  <style name="Theme.Karrency.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
    <item name="android:paddingRight">10dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="LabelStyle">
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_width">80dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">@dimen/result_font_size</item>
    <item name="android:layout_alignParentLeft">true</item>
  </style>

  <style name="ResultStyle">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:text">@string/dummy_result</item>
    <item name="android:textSize">@dimen/result_font_size</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="EditTextStyle">
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">15dp</item>
    <item name="android:maxLength">15</item>
    <item name="android:hint">@string/enter_amount</item>
    <item name="android:textSize">@dimen/result_font_size</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:layout_marginLeft">@dimen/listPreferredItemPaddingLeft</item>
    <item name="android:layout_marginRight">@dimen/listPreferredItemPaddingRight</item>
    <item name="android:inputType">numberDecimal</item>
  </style>

</resources>